<launch>

    <!-- <include file="$(find as_description)/launch/display_as.launch" /> -->
    <param name="robot_description" command="xacro '$(find as_description)/robots/as.xacro'" /> 
    <include file="$(find as_gazebo)/launch/as_gazebo_empty.launch" />

<!-- Control stack -->
<arg name="base_controller" value="mecanum_drive" />
<!-- <arg name="base_controller" value="differential_drive" /> -->
    
<include file="$(find as_base_control)/launch/load_control_stack.launch">
    <!-- possible values mecanum, group_velocity -->
    <arg name="base_controller_config" value="$(arg base_controller)" />
    <arg name="sim" value="true" />
</include>

 <!-- UI -->
 <group ns="ui">
    <include file="$(find as_ui)/launch/load_joy_stack.launch" />        
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find as_description)/rviz/as.rviz" />
 </group>
    
 
    


